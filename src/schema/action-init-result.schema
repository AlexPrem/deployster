{
    "type": "object",
    "additionalProperties": false,
    "required": [ "state_action" ],
    "properties": {
        "plugs": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][a-zA-Z0-9_\\-]*$": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [ "container_path" ],
                    "properties": {
                        "container_path": {
                            "type": "string"
                        },
                        "optional": {
                            "type": "boolean"
                        },
                        "writable": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "dependencies": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][a-zA-Z0-9_\\-]*$": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [ "type" ],
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "optional": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "config_schema": {
            "type": "object"
        },
        "state_action": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "string"
                },
                "entrypoint": {
                    "type": "string"
                },
                "args": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        }
    }
}
